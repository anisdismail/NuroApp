<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NuroApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/gray_text</item>
        <item name="colorPrimaryVariant">@color/gray_text</item>
        <item name="colorOnPrimary">@color/silver</item>
        <item name="android:textColor">@color/gray_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/rubik</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NuroApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/gray_text</item>
        <item name="colorPrimaryVariant">@color/gray_text</item>
        <item name="colorOnPrimary">@color/silver</item>
        <item name="android:textColor">@color/gray_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/rubik</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_text</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.NuroApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NuroApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>